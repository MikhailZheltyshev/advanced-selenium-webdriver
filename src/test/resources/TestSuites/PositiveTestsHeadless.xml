<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="PositiveLoginTestSuite" verbose="1">
	
	<test name="PositiveTest-CRHeadless">
		<parameter name="browser" value="chromeheadless"/>
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetests.PositiveLoginTests" />
		</classes>
	</test>

	<test name="PositiveTest-FFHeadless">
		<parameter name="browser" value="firefoxheadless"/>
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetests.PositiveLoginTests" />
		</classes>
	</test>

	<test name="PositiveTest-PhantomJS">
		<parameter name="browser" value="phantomjs"/>
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetests.PositiveLoginTests" />
		</classes>
	</test>

	<test name="PositiveTest-HTMLUnit">
		<parameter name="browser" value="htmlunit"/>
		<classes>
			<class name="com.herokuapp.theinternet.loginpagetests.PositiveLoginTests" />
		</classes>
	</test>
	
</suite>

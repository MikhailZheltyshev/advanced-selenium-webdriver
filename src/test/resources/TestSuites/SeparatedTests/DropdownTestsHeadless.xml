<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Dropdown tests" verbose="1" parallel="tests">

	<test name="Select Option Two Test-CRHeadless">
		<parameter name="browser" value="chromeheadless"/>
		<classes>
			<class name="com.herokuapp.theinternet.dropdowntests.DropdownTests" />
		</classes>
	</test>

	<test name="Select Option Two Test-FFHeadless">
		<parameter name="browser" value="firefoxheadless"/>
		<classes>
			<class name="com.herokuapp.theinternet.dropdowntests.DropdownTests" />
		</classes>
	</test>

	<test name="Select Option Two Test-PhantomJS">
		<parameter name="browser" value="phantomjs"/>
		<classes>
			<class name="com.herokuapp.theinternet.dropdowntests.DropdownTests" />
		</classes>
	</test>

	<test name="Select Option Two Test-HTMLUnit">
		<parameter name="browser" value="htmlunit"/>
		<classes>
			<class name="com.herokuapp.theinternet.dropdowntests.DropdownTests" />
		</classes>
	</test>
	
</suite>
